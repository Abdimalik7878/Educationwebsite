<%- include("partials/nav_admin", { user }) %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <h1 class="h4 fw-bold mb-0">Media</h1>
    <div class="text-muted small">Upload images (png/jpg) and videos (mp4). Copy the URL into Image/Video blocks.</div>
  </div>
  <a class="btn btn-dark" href="/admin">Back</a>
</div>

<div class="card shadow-sm mb-3">
  <div class="card-body">
    <form action="/admin/media/upload" method="POST" enctype="multipart/form-data" class="row g-2 align-items-end">
      <div class="col-md-8">
        <label class="form-label">Upload file</label>
        <input class="form-control" type="file" name="file" required>
      </div>
      <div class="col-md-4">
        <button class="btn btn-primary w-100">Upload</button>
      </div>
    </form>
  </div>
</div>

<div class="card shadow-sm">
  <div class="table-responsive">
    <table class="table table-striped align-middle mb-0">
      <thead>
        <tr>
          <th>File</th>
          <th>Type</th>
          <th>Size</th>
          <th>URL (copy this)</th>
          <th style="width:120px;"></th>
        </tr>
      </thead>
      <tbody>
        <% if (!items || items.length===0) { %>
          <tr><td colspan="5" class="text-muted p-4">No uploads yet.</td></tr>
        <% } %>
        <% items.forEach(it => { %>
          <tr>
            <td class="fw-semibold"><%= it.originalname %></td>
            <td class="text-muted small"><%= it.mimetype %></td>
            <td class="text-muted small"><%= Math.round(it.size/1024) %> KB</td>
            <td><code><%= it.url %></code></td>
            <td class="text-end">
              <% if (user.role === "admin") { %>
                <form action="/admin/media/<%= it.id %>/delete" method="POST" onsubmit="return confirm('Delete this file?');">
                  <button class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
              <% } else { %>
                <span class="text-muted small">admin only</span>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include("partials/footer_admin") %>
